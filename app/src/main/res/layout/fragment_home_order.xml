<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">
    <android.support.v7.widget.RecyclerView
        android:paddingEnd="@dimen/padding_normal"
        android:paddingStart="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_small"
        android:id="@+id/rcvOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardview_header"/>
    <View
        android:clickable="true"
        android:visibility="gone"
        android:background="#a8404040"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardview_header"
        android:id="@+id/view_up_rcv"
        android:focusable="true" />
    <include
        android:visibility="gone"
        layout="@layout/fragment_home_order_filter"
        android:id="@+id/filter"
        android:layout_below="@+id/cardview_header"
        android:layout_height="@dimen/filter_fragment_order_height"
        android:layout_width="match_parent" />
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_default_elevation">
    <RelativeLayout
        android:id="@+id/RL_filter_and_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_fragment_order_height"
        android:background="@android:color/white">
        <ImageButton
            android:layout_margin="@dimen/padding_normal"
            android:id="@+id/bt_time"
            android:layout_width="@dimen/header_fragment_order_height"
            android:layout_height="@dimen/header_fragment_order_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_time"
            android:scaleType="centerInside"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            />
        <TextView
            android:id="@+id/text_time"
            android:textSize="@dimen/text_size_normal"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/bt_time"
            android:layout_toStartOf="@+id/bt_filter" />
        <View
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_light"
            android:layout_toEndOf="@+id/text_time"/>
        <ImageButton
            android:padding="@dimen/padding_normal"
            android:id="@+id/bt_filter"
            android:layout_width="@dimen/header_fragment_order_height"
            android:layout_height="@dimen/header_fragment_order_height"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_filter"
            android:scaleType="centerInside"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>