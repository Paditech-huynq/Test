<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_view_header" />

    <View
        android:id="@+id/view_up_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_view_header"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <include
        android:id="@+id/filter"
        layout="@layout/fragment_home_order_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_header"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:id="@+id/RL_filter_and_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_fragment_order_height"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/bt_time"
                android:layout_width="@dimen/header_fragment_order_height"
                android:layout_height="@dimen/header_fragment_order_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/tv_time_in_header_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/bt_time"
                android:layout_toStartOf="@+id/bt_filter"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_toEndOf="@+id/tv_time_in_header_filter"
                android:background="@color/dark_light" />

            <ImageButton
                android:id="@+id/bt_filter"
                android:layout_width="@dimen/header_fragment_order_height"
                android:layout_height="@dimen/header_fragment_order_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginTop="@dimen/padding_normal"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_filter" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.paditech.core.DisableTouchView
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/actionbar_button_size"
            android:layout_height="@dimen/actionbar_button_size"
            android:layout_centerInParent="true" />
    </com.paditech.core.DisableTouchView>

    <TextView
        android:id="@+id/noResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_result"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/text_size_normal"
        android:visibility="gone" />
</RelativeLayout>