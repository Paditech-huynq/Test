<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvProduct"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:elevation="0dp"
        >
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_bar"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="25dip"
        android:paddingRight="25dip">

        <ImageView
            android:id="@+id/btnLookup"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_icon_bottom_detail_screen"
            app:srcCompat="@drawable/ic_lookup_selected"
            />

        <ImageView
            android:id="@+id/btnScan"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_icon_bottom_detail_screen"
            app:srcCompat="@drawable/ic_scan_qr_selected" />

        <ImageView
            android:id="@+id/btnSubmit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_icon_bottom_detail_screen"
            app:srcCompat="@drawable/ic_payment" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>