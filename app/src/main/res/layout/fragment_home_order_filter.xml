<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <android.support.v7.widget.CardView
            android:id="@+id/bt_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="1.5"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/card_radius_normal"
            app:cardElevation="0dp"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/all_order_list"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bt_thisweek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_normal"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/card_radius_normal"
            app:cardElevation="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/this_week_order_list"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bt_lastweek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_normal"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/card_radius_normal"
            app:cardElevation="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/last_week"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bt_thismonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/padding_normal"
            android:layout_marginStart="@dimen/padding_normal"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/card_radius_normal"
            app:cardElevation="0dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_normal"
                android:text="@string/this_month"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <RelativeLayout
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@drawable/bg_day_order_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="22/12/2012"
                android:textSize="@dimen/text_size_small" />

            <ImageButton
                android:id="@+id/calender_left"
                android:layout_width="@dimen/text_size_title"
                android:layout_height="@dimen/text_size_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_small"
                android:background="@drawable/ic_time"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            android:background="@drawable/bg_day_order_list">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="22/12/2012"
                android:textSize="@dimen/text_size_small" />

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/calender_right"
                android:layout_width="@dimen/text_size_title"
                android:layout_height="@dimen/text_size_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/padding_small"
                android:background="@drawable/ic_time"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/card_radius_normal"
        android:id="@+id/bt_search"
        app:contentPadding="@dimen/padding_tiny"
        android:layout_marginBottom="@dimen/padding_normal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/text_size_title"
                android:layout_height="@dimen/text_size_title"
                android:layout_marginEnd="@dimen/padding_tiny"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:scaleType="centerInside"
                android:src="@drawable/ic_lookup2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/padding_normal"
                android:gravity="center"
                android:text="@string/find"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>