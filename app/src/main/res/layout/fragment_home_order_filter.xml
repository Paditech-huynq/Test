<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="5dp">
        <android.support.v7.widget.CardView

            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            app:cardBackgroundColor="#fddc00"
            >
            <TextView
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tất cả"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            app:cardCornerRadius="10dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fddc00">
            <TextView
                android:text="Tuần này"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            app:cardCornerRadius="10dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fddc00">
            <TextView
                android:text="Tuần Trước"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            app:cardCornerRadius="10dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fddc00">
            <TextView
                android:text="Tháng này"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="3dp"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:text="22/12/2012"

                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/calender_left"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_time"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:contentPadding="1dp"
            android:layout_width="0dp"
            app:cardElevation="3dp"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:text="22/12/2012"

                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/calender_right"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_time"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:contentPadding="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
        android:paddingTop="6dp"
            android:paddingBottom="6dp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_lookup2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tìm kiếm"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>