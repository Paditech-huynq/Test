<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <Button
            android:id="@+id/bt_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_filter_choose_day"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="1.5"
            android:text="@string/all_order_list"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/color_text_filter_choose_day"
            android:minHeight="0dp"/>

        <Button
            android:id="@+id/bt_thisweek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_filter_choose_day"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="2"
            android:text="@string/this_week_order_list"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/color_text_filter_choose_day"
            android:minHeight="0dp"/>

        <Button
            android:id="@+id/bt_lastweek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_filter_choose_day"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="2"
            android:text="@string/last_week"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/color_text_filter_choose_day"
            android:minHeight="0dp"/>

        <Button
            android:id="@+id/bt_thismonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_filter_choose_day"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="2"
            android:text="@string/this_month"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/color_text_filter_choose_day"
            android:minHeight="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <RelativeLayout
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:background="@drawable/bg_day_order_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/tv_calender_left_filter"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/calender_left"
                android:layout_centerVertical="true"
                android:text="22/12/2012"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_normal" />

            <ImageButton
                android:id="@+id/calender_left"
                android:layout_width="@dimen/text_size_title"
                android:layout_height="@dimen/text_size_title"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/padding_small"
                android:background="@drawable/ic_time"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_marginRight="@dimen/padding_large"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_small"
            android:background="@drawable/bg_day_order_list">

            <TextView
                android:id="@+id/tv_calender_right_filter"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/calender_right"
                android:layout_centerVertical="true"
                android:text="22/12/2012"
                android:textSize="@dimen/text_size_normal" />

            <ImageButton
                android:layout_centerVertical="true"
                android:id="@+id/calender_right"
                android:layout_width="@dimen/text_size_title"
                android:layout_height="@dimen/text_size_title"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/padding_small"
                android:background="@drawable/ic_time"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/card_radius_small"
        android:id="@+id/bt_search"
        app:contentPadding="@dimen/padding_tiny"
        android:layout_marginTop="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_tiny">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_btn_find"
                android:layout_height="@dimen/size_ic_find"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_lookup2" />

            <TextView
                android:textStyle="bold"
                android:padding="@dimen/padding_tiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/find"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>