<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="5dp"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_small">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/actionbar_button_size"
            android:layout_height="@dimen/actionbar_button_size"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_tiny"
            android:src="@drawable/ic_avatar_holder_circle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/btnCart"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:padding="3dip"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cart2" />

            <TextView
                android:id="@+id/tvCartAmount"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/white"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:background="@drawable/bg_notification_border_rounded"
                android:text="99" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:src="@drawable/ic_notification"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvNotifyUnreadCount"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="20dip"
                android:gravity="center"
                android:maxLines="1"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/white"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:background="@drawable/bg_notification_border_rounded"
                android:text="9" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/btnTrash"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@drawable/ic_trash" />
    </LinearLayout>
</RelativeLayout>