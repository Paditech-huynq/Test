<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutProfileRegister" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:scaleType="centerCrop"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_margin="@dimen/padding_normal"
            android:src="@drawable/ic_avatar_holder_circle"/>

        <android.support.v7.widget.CardView
            android:id="@+id/registView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_big"
            android:layout_marginRight="@dimen/padding_big"
            app:cardCornerRadius="@dimen/card_radius_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_big">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/att_profile_register_full_name_required"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:background="@drawable/bg_edt_state"
                    android:paddingBottom="@dimen/text_size_tiny"
                    android:paddingLeft="@dimen/text_size_tiny"
                    android:paddingTop="@dimen/text_size_tiny" >
                    <requestFocus />
                </EditText>

                <TextView
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/att_profile_register_phone_required"
                    android:textStyle="bold" />

                <EditText
                    android:inputType="phone"
                    android:id="@+id/edtPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:background="@drawable/bg_edt_state"
                    android:paddingBottom="@dimen/text_size_tiny"
                    android:paddingLeft="@dimen/text_size_tiny"
                    android:paddingTop="@dimen/text_size_tiny" />

                <TextView
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/att_profile_register_email"
                    android:textStyle="bold" />

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:background="@drawable/bg_edt_state"
                    android:paddingBottom="@dimen/text_size_tiny"
                    android:paddingLeft="@dimen/text_size_tiny"
                    android:paddingTop="@dimen/text_size_tiny"/>

                <TextView
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/att_profile_register_address"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:background="@drawable/bg_edt_state"
                    android:paddingBottom="@dimen/text_size_tiny"
                    android:paddingLeft="@dimen/text_size_tiny"
                    android:paddingTop="@dimen/text_size_tiny"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/action_create_new_customer"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <com.paditech.core.DisableTouchView
        android:id="@+id/layoutDisable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="#90000000"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/layoutControllSelectImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Camera"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="Gallery"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </com.paditech.core.DisableTouchView>
</FrameLayout>