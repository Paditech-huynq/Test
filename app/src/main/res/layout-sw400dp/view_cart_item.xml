<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_item_height"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvProduct"
            android:layout_width="@dimen/cart_item_height"
            android:layout_height="@dimen/cart_item_height"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_normal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="47dip"
                android:maxLines="2"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="Striped Maxi Dress Color - Show your of  your life - SKU002"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/layoutAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvName"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    app:srcCompat="@drawable/ic_decrease" />

                <TextView
                    android:id="@+id/btnCart"
                    android:layout_width="45dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="4"
                    android:padding="@dimen/padding_small"
                    android:text="9999" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    app:srcCompat="@drawable/ic_increase" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/padding_tiny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvName"
                android:layout_toLeftOf="@id/layoutAmount"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Đơn giá: 40.000 VNĐ"
                    android:textColor="@color/text_orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Tổng:  40.000.00 VNĐ"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>