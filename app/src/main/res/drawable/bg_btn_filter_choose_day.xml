<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        >
        <shape android:shape="rectangle">
            <solid
                android:color="@color/text_orange"/>
            <corners
                android:radius="@dimen/radius_button_choose_day"/>
            <padding
                android:top="@dimen/padding_small"
                android:right="@dimen/padding_small"
                android:left="@dimen/padding_small"
                android:bottom="@dimen/padding_small"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/gray"/>
            <corners
                android:radius="@dimen/radius_button_choose_day"
                />
            <padding
                android:top="@dimen/padding_small"
                android:right="@dimen/padding_small"
                android:left="@dimen/padding_small"
                android:bottom="@dimen/padding_small"
                />
        </shape>
    </item>
</selector>